set $mod Mod4

set $refresh_i3status killall -SIGUSR1 i3status

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
#font pango:monospace 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:DejaVu Sans Mono 12

# Maybe set DPI scaling?
#exec xrandr --dpi 130

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# Set the Wallpaper
exec --no-startup-id feh --bg-fill /home/james/Pictures/Wallpapers/WP.jpg

# Start compositor Picom
exec --no-startup-id picom --config /home/james/.config/picom/picom.conf

# Startup Dropbox (When running in i3 only mode)
exec --no-startup-id dropbox

# Startup libinput-gestures for 4-finger swipe (When running in i3 only mode)
exec --no-startup-id libinput-gestures-setup start

# Dunst is a drop in notification handler replacement
exec --no-startup-id dunst -config ~/.config/dunst/dunstrc

# Dunst shortcuts settings are now defined in WM/DE config
bindsym ctrl+space exec dunstctl close
bindsym ctrl+shift+space exec dunstctl close-all
bindsym ctrl+grave exec dunstctl history-pop

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Use playerctl to control MPRIS media players
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next

# Use brightnessctl (dep) to adjust backlight brightness
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s +2%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 2%-

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+grave exec i3-sensible-terminal
bindsym $mod+Mod1+grave exec konsole --profile "Standard Fish"

# Start a dolphin file browser
bindsym $mod+e exec dolphin

# kill focused window
bindsym $mod+q kill

# start dmenu/rofi (a program launcher)
#bindsym $mod+d exec dmenu_run
bindsym $mod+d exec --no-startup-id rofi -show drun

# Use maim and xclip to screenshot regions or whole screens and drop them in the clipboard
# Also save the screenshot in the folder ~/Pictures/Screenshots
bindsym Print exec --no-startup-id "maim -s | xclip -selection clipboard -t image/png; xclip -selection clipboard -t image/png -o > ~/Pictures/Screenshots/$(date +%F-%H:%M:%S).png"
bindsym Shift+Print exec --no-startup-id "maim | xclip -selection clipboard -t image/png; xclip -selection clipboard -t image/png -o > ~/Pictures/Screenshots/$(date +%F-%H:%M:%S).png"

# Use xkb-switch to switch keyboard layout (sequentially)
bindsym $mod+ctrl+space exec xkb-switch -n && $refresh_i3status

# Start Logseq
