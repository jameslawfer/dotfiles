# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

#order += "ipv6"
order += "path_exists VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "disk /home"
order += "load"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
#        format_up = "W[%frequency]: (%quality %essid %bitrate) %ip"
#        format_down = "W: down"
        format_up = "󰖩 [%frequency]|> (%quality %essid %bitrate) %ip"
        format_down = "󰖪 down"
        format_quality = "%02d%s"
}

ethernet _first_ {
#        format_up = "E: %ip (%speed)"
        format_up = "󰌗 %speed %ip"
        format_down = ""
}

battery all {
        format = "%status %percentage"
        threshold_type = percentage
        low_threshold = 20
        last_full_capacity = true
        format_down = "NO BATTERY"

        status_chr = ""
        status_bat = "󰄌"
        status_unk = "󰂑"
        status_full = ""
}

disk "/" {
        format = " /:%avail"
        format_below_threshold = "<|DISK /:%avail|>"
        prefix_type = custom
        low_threshold = 20
        threshold_type = percentage_avail
}

disk "/home" {
        format = " /home:%avail"
        format_below_threshold = "<|DISK /home:%avail|>"
        prefix_type = custom
        low_threshold = 15
        threshold_type = percentage_avail
}

load {
        format = ""
        max_threshold = 2
        format_above_threshold = "<|LOAD|-%1min %5min %15min|>"
}

memory {
        format = ""
        threshold_degraded = "4G"
        format_degraded = "<|MEMORY|-%available avail|>"
        threshold_critical = "1G"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

volume master {
    device = "default"
    mixer = "Master"
    mixer_idx = 0
#    format = "VOL:%volume"
    format = " %volume"
    format_muted = " MUTE(%volume)"
}

path_exists VPN {
    path = "/proc/sys/net/ipv4/conf/nordtun"
#    format = "VPN:Up"
#    format_down = "VPN:Disconnected"
    format = " Connected"
    format_down = " Disconnected"
}
